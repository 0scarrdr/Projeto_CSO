{
  "dashboard": {
    "id": null,
    "title": "SOAR System Monitoring",
    "tags": ["soar", "security", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"soar\"}",
            "legendFormat": "SOAR System"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Incidents Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(soar_incidents_total[1h]))",
            "legendFormat": "Last Hour"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(soar_response_time_seconds)",
            "legendFormat": "Avg Response Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 300}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Alert Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(soar_alerts_total[5m])",
            "legendFormat": "Alerts/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Incident Types Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(soar_incidents_total[5m])",
            "legendFormat": "{{type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "System Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "soar_cpu_usage_percent",
            "legendFormat": "CPU Usage"
          },
          {
            "expr": "soar_memory_usage_percent",
            "legendFormat": "Memory Usage"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "Top Threat Sources",
        "type": "piechart",
        "targets": [
          {
            "expr": "topk(10, sum by (source) (soar_threats_total))",
            "legendFormat": "{{source}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Response Actions",
        "type": "barchart",
        "targets": [
          {
            "expr": "sum by (action) (soar_actions_total)",
            "legendFormat": "{{action}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12}
      },
      {
        "id": 9,
        "title": "Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(soar_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1
  }
}
